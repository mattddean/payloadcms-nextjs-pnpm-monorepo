{
  "name": "@acme/payloadcms",
  "private": true,
  "version": "1.0.0",
  "main": "dist/server.js",
  "packageManager": "pnpm@8.6.1",
  "scripts": {
    "dev": "ROARR_LOG=true pnpm with-env turbowatch ./turbowatch.payload.ts ./turbowatch.generate.ts",
    "dev:payload": "PAYLOAD_CONFIG_PATH=src/payload.config.ts pnpm with-env ts-node src/server.ts",
    "build:payload": "PAYLOAD_CONFIG_PATH=src/payload.config.ts pnpm with-env payload build",
    "build:server": "tsc",
    "build": "pnpm copyfiles && pnpm build:payload && pnpm build:server",
    "serve": "PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production pnpm with-env node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "generate-types": "PAYLOAD_CONFIG_PATH=src/payload.config.ts pnpm with-env payload generate:types",
    "generate-gql-schema": "PAYLOAD_CONFIG_PATH=src/payload.config.ts pnpm with-env payload generate:graphQLSchema",
    "lint": "eslint src",
    "lint:fix": "eslint --fix --ext .ts,.tsx src",
    "clean": "git clean -xdf .swc .turbo build dist node_modules",
    "type-check": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@payloadcms/plugin-cloud": "^2.0.0",
    "@payloadcms/plugin-cloud-storage": "^1.0.16",
    "@payloadcms/plugin-nested-docs": "^1.0.4",
    "@payloadcms/plugin-seo": "^1.0.10",
    "@t3-oss/env-core": "^0.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "payload": "^1.8.3",
    "react": "^18.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@acme/eslint-config": "^0.1.0",
    "@types/express": "^4.17.9",
    "@types/node": "^16.18.34",
    "@types/react": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.59.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.34.0",
    "prettier": "^2.8.8",
    "ts-node": "^9.1.1",
    "turbowatch": "^2.24.2",
    "typescript": "^5.0.3"
  }
}
